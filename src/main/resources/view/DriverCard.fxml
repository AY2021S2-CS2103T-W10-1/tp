<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<HBox id="driverCardPane" fx:id="driverCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="125" />
    </columnConstraints>
    <VBox>
      <padding>
        <Insets top="5" right="10" bottom="5" left="10" />
      </padding>
      <Label fx:id="message" styleClass="driverPane_message" text="\$message" />
      <HBox prefHeight="30">
        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="/images/name.png" />
          </image>
        </ImageView>
        <Label fx:id="name" styleClass="cell_small_label" text="\$name" />
      </HBox>
    <HBox prefHeight="30">
      <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="/images/phone.png" />
        </image>
      </ImageView>
      <Label alignment="CENTER_LEFT" fx:id="phone" styleClass="cell_small_label" text="\$phone" />
    </HBox>
    </VBox>
  </GridPane>
</HBox>
